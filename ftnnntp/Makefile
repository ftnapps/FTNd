# Makefile for ftnnntpd

include ../Makefile.global

SRCS		= ftnnntp.c openport.c ttyio.c auth.c commands.c rfc2ftn.c \
		  hash.c lhash.c msgflags.c mkftnhdr.c atoul.c
HDRS		= ftnnntp.h openport.h ttyio.h auth.h commands.h rfc2ftn.h \
		  hash.h lhash.h msgflags.h mkftnhdr.h atoul.h
OBJS		= ftnnntp.o openport.o ttyio.o auth.o commands.o rfc2ftn.o \
		  hash.o lhash.o msgflags.o mkftnhdr.o atoul.o
SLIBS		= ../lib/libftnd.a ../lib/libmsgbase.a ../lib/libdbase.a
OTHER		= Makefile

#############################################################################

.c.o:
		${CC} ${CFLAGS} ${INCLUDES} ${DEFINES} -c $<

all:		ftnnntp


ftnnntp:		${OBJS} ${SLIBS}
		${CC} -o ftnnntp   ${OBJS} ${LDFLAGS} ${LIBS} ${SLIBS}

clean:
		rm -f ftnnntp *.o *.h~ *.c~ core filelist Makefile.bak

install:	all
		${INSTALL} -c -s -g ${GROUP} -o ${OWNER} -m 4750 ftnnntp   ${BINDIR}

filelist:	Makefile
		BASE=`pwd`; \
		BASE=`basename $${BASE}`; \
		(for f in ${SRCS} ${HDRS} ${OTHER} ;do echo ${PACKAGE}-${VERSION}/$${BASE}/$$f; done) >filelist

depend:
	@rm -f Makefile.bak; \
	mv Makefile Makefile.bak; \
	sed -e '/^# DO NOT DELETE/,$$d' Makefile.bak >Makefile; \
	${ECHO} '# DO NOT DELETE THIS LINE - MAKE DEPEND RELIES ON IT' \
		>>Makefile; \
	${ECHO} '# Dependencies generated by make depend' >>Makefile; \
	for f in ${SRCS}; \
	do \
		${ECHO} "Dependencies for $$f:\c"; \
		${ECHO} "`basename $$f .c`.o:\c" >>Makefile; \
		for h in `sed -n -e \
			's/^#[ 	]*include[ 	]*"\([^"]*\)".*/\1/p' $$f`; \
		do \
			${ECHO} " $$h\c"; \
			${ECHO} " $$h\c" >>Makefile; \
		done; \
		${ECHO} " done."; \
		${ECHO} "" >>Makefile; \
	done; \
	${ECHO} '# End of generated dependencies' >>Makefile

# DO NOT DELETE THIS LINE - MAKE DEPEND RELIES ON IT
# Dependencies generated by make depend
ftnnntp.o: ../config.h ../lib/ftndlib.h ../lib/users.h ../lib/ftnddb.h ../lib/msg.h openport.h ttyio.h auth.h commands.h mbnntp.h
openport.o: ../config.h ../lib/ftndlib.h ttyio.h openport.h
ttyio.o: ../config.h ../lib/ftndlib.h ttyio.h
auth.o: ../config.h ../lib/ftndlib.h ../lib/users.h ftnnntp.h auth.h
commands.o: ../config.h ../lib/ftndlib.h ../lib/users.h ../lib/msg.h ../lib/msgtext.h ../lib/ftnddb.h ttyio.h ftnnntp.h rfc2ftn.h commands.h
rfc2ftn.o: ../config.h ../lib/ftndlib.h ../lib/users.h ../lib/ftninet.h ../lib/ftnddb.h ../lib/msg.h ../lib/msgtext.h mkftnhdr.h hash.h msgflags.h rfc2ftn.h commands.h
hash.o: ../config.h ../lib/ftndlib.h hash.h lhash.h
lhash.o: ../config.h ../lib/ftndlib.h lhash.h
msgflags.o: ../config.h ../lib/ftndlib.h msgflags.h
mkftnhdr.o: ../config.h ../lib/ftndlib.h ../lib/users.h ../lib/ftnddb.h atoul.h hash.h msgflags.h mkftnhdr.h
atoul.o: ../config.h ../lib/mbselib.h atoul.h
# End of generated dependencies
