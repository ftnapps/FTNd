#!/bin/sh
# postinst script for FTNd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#  Set old_version variable for use later in the script.
old_version=$2

case "$1" in
    configure)
    # Install example bash profile if it is not already present
    if [ ! -e "/usr/lib/ftnd/.profile" ]; then
        install -m 440 /usr/share/doc/ftnd/examples/profile.ftnd /usr/lib/ftnd/.profile
    fi

    # Install example bbbsdoor.sh script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/bbsdoor.sh" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/bbsdoor.sh /usr/lib/ftnd/bin/bbsdoor.sh
    fi
    # Install example editor script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/editor" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/editor /usr/lib/ftnd/bin/editor
    fi
    # Install example hatch script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/hatch" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/hatch /usr/lib/ftnd/bin/hatch
    fi
    # Install example ftnbbsdos script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/ftnbbsdos" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/ftnbbsdos /usr/lib/ftnd/bin/ftnbbsdos
    fi
    # Install example rundoor.sh script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/rundoor.sh" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/rundoor.sh /usr/lib/ftnd/bin/rundoor.sh
    fi
    # Install example runvirtual.sh script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/runvirtual.sh" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/runvirtual.sh /usr/lib/ftnd/bin/runvirtual.sh
    fi
    # Install example maint script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/adm/maint" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/maint /usr/lib/ftnd/bin/adm/maint
    fi
    # Install example midnight script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/adm/midnight" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/midnight /usr/lib/ftnd/bin/adm/midnight
    fi
    # Install example monthly script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/adm/monthly" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/monthly /usr/lib/ftnd/bin/adm/monthly
    fi
    # Install example weekly script if it is not already present
    if [ ! -e "/usr/lib/ftnd/bin/adm/weekly" ]; then
        install -m 750 /usr/share/doc/ftnd/examples/weekly /usr/lib/ftnd/bin/adm/weekly
    fi

    # Install example footer.txt file if it is not already present
    if [ ! -e "/var/lib/ftnd/etc/footer.txt" ]; then
        install -m 640 /usr/share/ftnd/etc/footer.txt /var/lib/ftnd/etc/footer.txt
    fi
    # Install example header.txt file if it is not already present
    if [ ! -e "/var/lib/ftnd/etc/header.txt" ]; then
        install -m 640 /usr/share/ftnd/etc/header.txt /var/lib/ftnd/etc/header.txt
    fi

    # Install the English BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.en" ]; then
        install -m 640 /usr/share/ftnd/int/language.en /var/lib/ftnd/int/language.en
    fi
    # Install the Spanish BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.es" ]; then
        install -m 640 /usr/share/ftnd/int/language.es /var/lib/ftnd/int/language.es
    fi
    # Install the German BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.de" ]; then
        install -m 640 /usr/share/ftnd/int/language.de /var/lib/ftnd/int/language.de
    fi
    # Install the French BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.fr" ]; then
        install -m 640 /usr/share/ftnd/int/language.fr /var/lib/ftnd/share/language.fr
    fi
    # Install the Galician BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.gl" ]; then
        install -m 640 /usr/share/ftnd/int/language.gl /var/lib/ftnd/int/language.gl
    fi
    # Install the Dutch BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.nl" ]; then
        install -m 640 /usr/share/ftnd/int/language.nl /var/lib/ftnd/int/language.nl
    fi
    # Install the Chinese BBS language file if it is not already present
    if [ ! -e "/var/lib/ftnd/int/language.zh" ]; then
        install -m 640 /usr/share/ftnd/int/language.zh /var/lib/ftnd/int/language.zh
    fi

    # Create macros directory if not already present
    if [ ! -d "/var/lib/ftnd/int/macro/" ]; then
        mkdir --mode=755 /usr/lib/ftnd/share/int/macro
    fi
    # Install english text macro files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/macro/en/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/macro/en
        tar xfC /usr/share/ftnd/int/templates-en.tar /var/lib/ftnd/int/macro/en
    fi
    # Install spanish text macro files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/macro/es/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/macro/es
        tar xfC /usr/share/ftnd/int/templates-es.tar /var/lib/ftnd/int/macro/es
    fi
    # Install german text macro files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/macro/de/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/macro/de
        tar xfC /usr/share/ftnd/int/templates-de.tar /var/lib/ftnd/int/macro/de
    fi
    # Install dutch text macro files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/macro/nl/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/macro/nl
        tar xfC /usr/share/ftnd/int/templates-nl.tar /var/lib/ftnd/int/macro/nl
    fi

    # Create menu directory if not already present
    if [ ! -d "/var/lib/ftnd/int/menus/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/menus
    fi
    # Install english text menu files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/menus/en/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/menus/en
        tar xfC /usr/share/ftnd/int/menus-en.tar /var/lib/ftnd/int/menus/en
    fi
    # Install spanish text menu files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/menus/es/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/menus/es
        tar xfC /usr/share/ftnd/int/menus-es.tar /var/lib/ftnd/int/menus/es
    fi

    # Create txtfiles directory if not already present
    if [ ! -d "/var/lib/ftnd/int/txtfiles/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/txtfiles
    fi
    # Install english text txtfiles files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/txtfiles/en/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/txtfiles/en
        tar xfC /usr/share/ftnd/int/txtfiles-en.tar /var/lib/ftnd/int/txtfiles/en
    fi
    # Install spanish text txtfiles files if that directory is not already present
    if [ ! -d "/var/lib/ftnd/int/txtfiles/es/" ]; then
        mkdir --mode=755 /var/lib/ftnd/int/txtfiles/es
        tar xfC /usr/share/ftnd/int/txtfiles-es.tar /var/lib/ftnd/int/txtfiles/es
    fi

    #  Set default user:group for ftnd install
    chown -R ftnd:ftnbbs /var/lib/ftnd
    chown -R ftnd:ftnbbs /usr/lib/ftnd

    # Configure setuid & setgid as necessary
    chown root:root /usr/lib/ftnd/bin/ftntask
    chmod 6711 /usr/lib/ftnd/bin/ftntask
    chown root:root /usr/lib/ftnd/bin/ftnnewusr
    chmod 6754 /usr/lib/ftnd/bin/ftnnewusr
    chown root:root /usr/lib/ftnd/bin/ftnuser
    chmod 6711 /usr/lib/ftnd/bin/ftnuser
    chown root:root /usr/lib/ftnd/bin/ftnuseradd
    chmod 6711 /usr/lib/ftnd/bin/ftnuseradd
    chown root:root /usr/lib/ftnd/bin/ftnpasswd
    chmod 6754 /usr/lib/ftnd/bin/ftnpasswd

     #  Run ftnd ftnsetup initialization if this is a new install
    if [ -z "$old_version" ]; then
        su - ftnd -c "/usr/lib/ftnd/bin/ftnsetup init"
    fi

    #  Run FTNd ftnsetup initialization if this is a new install
    if [ -z "$old_version" ]; then
        su - ftnd -c "/usr/lib/ftnd/bin/ftnsetup init"
    fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


